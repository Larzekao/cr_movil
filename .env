# ========================================
# API Configuration
# ========================================
# Para Android Emulator usa: http://10.0.2.2:8000/api
# Para iOS Simulator usa: http://localhost:8000/api
# Para dispositivo físico usa la IP de tu máquina: http://192.168.x.x:8000/api
API_BASE_URL=http://10.0.2.2:8000/api
API_TIMEOUT=30000

# ========================================
# Backend Configuration
# ========================================
# Coincide con tu backend Django
DATABASE_NAME=DG_Clinica
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ========================================
# Environment
# ========================================
ENVIRONMENT=development
DEBUG_MODE=true

# ========================================
# JWT Configuration
# ========================================
# Coincide con tu backend (.env del backend)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# ========================================
# CORS Origins
# ========================================
# Frontend corriendo en estos puertos
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# ========================================
# App Info
# ========================================
APP_NAME=CliniDocs Mobile
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# ========================================
# Features Flags
# ========================================
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=false
ENABLE_PUSH_NOTIFICATIONS=false

# ========================================
# Storage
# ========================================
# S3 Configuration (opcional)
USE_S3=false
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ========================================
# Logging
# ========================================
ENABLE_LOGGING=true
LOG_LEVEL=debug
