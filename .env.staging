# =============================================================================
# FLUTTER MOBILE APP - STAGING ENVIRONMENT
# =============================================================================

# Backend API (Staging server)
API_BASE_URL=https://staging-api.clinidocs.com/api

# Environment
ENVIRONMENT=staging

# Debug Mode
ENABLE_LOGGING=true

# Cache
ENABLE_CACHE=true
CACHE_DURATION_MINUTES=60

# Timeouts
API_TIMEOUT_SECONDS=20
CONNECT_TIMEOUT_SECONDS=8

# Features Flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# Sentry (Error Tracking)
SENTRY_DSN=https://xxxx@xxxxx.ingest.sentry.io/xxxxx

# Storage
MAX_CACHE_SIZE_MB=150
