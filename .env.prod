# =============================================================================
# FLUTTER MOBILE APP - PRODUCTION ENVIRONMENT
# =============================================================================

# Backend API (AWS EC2 - Production server)
# IP Pública de EC2: 52.0.69.138
API_BASE_URL=http://52.0.69.138/api

# Environment
ENVIRONMENT=production

# Debug Mode (DISABLED en producción)
ENABLE_LOGGING=false

# Cache
ENABLE_CACHE=true
CACHE_DURATION_MINUTES=120

# Timeouts (más tolerantes para conexión a AWS)
API_TIMEOUT_SECONDS=30
CONNECT_TIMEOUT_SECONDS=10

# Features Flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Sentry (Error Tracking - Deshabilitado temporalmente)
# SENTRY_DSN=https://xxxx@xxxxx.ingest.sentry.io/xxxxx

# Storage
MAX_CACHE_SIZE_MB=200

# Security (Deshabilitado para HTTP sin SSL)
CERTIFICATE_PINNING_ENABLED=false
