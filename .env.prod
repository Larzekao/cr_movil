# =============================================================================
# FLUTTER MOBILE APP - PRODUCTION ENVIRONMENT
# =============================================================================

# Backend API (Production server)
API_BASE_URL=https://api.clinidocs.com/api

# Environment
ENVIRONMENT=production

# Debug Mode (DISABLED en producción)
ENABLE_LOGGING=false

# Cache
ENABLE_CACHE=true
CACHE_DURATION_MINUTES=120

# Timeouts (más estrictos en prod)
API_TIMEOUT_SECONDS=15
CONNECT_TIMEOUT_SECONDS=5

# Features Flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# Sentry (Error Tracking - CRÍTICO)
SENTRY_DSN=https://xxxx@xxxxx.ingest.sentry.io/xxxxx

# Storage
MAX_CACHE_SIZE_MB=200

# Security
CERTIFICATE_PINNING_ENABLED=true
